{
	"name": "nindo-demo-app",
	"version": "1.0.0",
	"private": true,
	"proxy": "http://localhost:4000/",
	"engines": {
		"npm": "6.x || 8.x",
		"node": "14.x || 16.x"
	},
	"dependencies": {
		"@commonninja/nindo": "^1.2.10",
		"react": ">=17.0.2",
		"react-dom": ">=17.0.2",
		"react-scripts": "^4.0.3",
		"sass": "^1.35.1",
		"typescript": "^4.4.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"prettier": "prettier --write .",
		"analyze": "cn-scripts analyze",
		"simulate": "cn-scripts simulate",
		"postbuild": "cn-scripts post-build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,md,html,css,scss}": [
			"npm run prettier"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"husky": "^4.3.8",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1"
	}
}
